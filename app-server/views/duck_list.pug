extends layout

include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1= pageHeader.title
      small &nbsp;#{pageHeader.strapline}
  .row
    .col-12.col-md-8
      each duck in duck_list
        .card-h 
          .card-block
            img(src="images/duck.jpg", alt="Image Description")
            h4
              a(href='/ducks/'+duck.id) #{duck.name} 
              small &nbsp;
                | P QuackScore
                +outputRating(duck.rating)
            
            .facilities
              p Features
                each feature in duck.features
                  span.badge.badge-warning= feature
                
            .facilities
              p Hobbies
                each hobby in duck.hobbies
                  span.badge.badge-warning= hobby
