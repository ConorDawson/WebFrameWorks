extends layout

include _includes/sharedHTMLfunctions

block content
  .row.banner
    .col-12
      h1= pageHeader.title
  .row
    .col-12.col-lg-9
      .row
        .col-12.col-md-6
         
          .card.card-primary
            .card-block
              h2.card-title Rating

          .card.card-primary
            .card-block
              h2.card-title Features
              each feature in duck.features
                span.badge.badge-warning
                  i.fa.fa-check
                  | &nbsp;#{feature}
                | &nbsp;

          .card.card-primary
            .card-block
              h2.card-title Past-Times
              each hobby in duck.hobbies
                span.badge.badge-warning
                  i.fa.fa-check
                  | &nbsp;#{hobby}
                | &nbsp;

                
        .col-12.col-md-6.location-map
          .card.card-primary
            .card-block
             img(src="images/duck.jpg", alt="Image Description", class="profile")

      .row
        .col-12
          .card.card-primary.review-card
            .card-block
              a.btn.btn-primary.float-right(href='/ducks/review/new') Add comment
              h2.card-title Friends comments
              each review in duck.reviews
                .row.review
                  .col-12.no-gutters.review-header
                    .rating
                   
                    span.reviewAuthor #{review.author}
                    small.reviewTimestamp #{review.timestamp}
                  .col-12
                    p !{(review.reviewText).replace(/\n/g, '<br/>')}
    .col-12.col-lg-3
    
      p= sidebar.callToAction
